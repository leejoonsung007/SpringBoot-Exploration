<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.school.bestchoice.mapper.UserMapper">

    <select id="selectUsers" resultType="user">
        select name, email from user
    </select>

    <select id="selectUsersByQuery" resultType="user">
        select * from user
        <where>
            <if test="email != null">
                and email = #{email}
            </if>
            <if test="password != null">
                and password = #{password}
            </if>
            <if test="confirmed != null">
                and confirmed = #{confirmed}
            </if>
        </where>
    </select>

    <insert id="insert">
        insert into user (
        username,
        email,
        member_since,
        last_seen,
        location,
        role_id,
        password,
        confirmed,
        facebook_id,
        photo,
        login_type
        )
        values(
        #{username},
        #{email},
        #{member_since},
        #{last_seen},
        #{location},
        #{role_id},
        #{password},
        #{confirmed},
        #{facebook_id},
        #{photo},
        #{login_type}
        )
    </insert>

    <!--<delete id="delete">-->
        <!--delete from user-->
        <!--where  email=#{email}-->
    <!--</delete>-->

    <update id="update">
        update user
        <set>
            <if test="username !=null and username != '' ">
                username = #{username},
            </if>
            <if test="location !=null and location != '' ">
                location = #{location},
            </if>
            <if test="role_id !=null and role_id != '' ">
                role_id = #{role_id},
            </if>
            <if test="password !=null and password != '' ">
                password = #{password},
            </if>
            <if test="confirmed !=null ">
                confirmed = #{confirmed},
            </if>
            <if test="photo !=null ">
                photo = #{photo},
            </if>

        </set>
        where email = #{email}
    </update>

</mapper>